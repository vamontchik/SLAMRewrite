<Window x:Class="SLAMRewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLAMRewrite"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="400"
        Width="800"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel
            Grid.Row="0"
            HorizontalAlignment="Right">
            <Button
                Name="ImportButton"
                Content="Add"
                Width="100"
                Height="50"
                Click="ImportButton_OnClick" />
            <Button
                Name="PlayButton"
                Content="Play"
                Width="100"
                Height="50"
                Click="PlayButton_OnClick" />
            <Button
                Name="PauseButton"
                Content="Pause"
                Width="100"
                Height="50"
                Click="PauseButton_OnClick" />
        </WrapPanel>
        <ListView
            Name="AudioTracksListView"
            Grid.Row="1"
            SelectionChanged="AudioTracks_OnSelectionChanged" />
    </Grid>
</Window>