<Window x:Class="SLAMRewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLAMRewrite"
        mc:Ignorable="d"
        Title="SLAMRewrite"
        Height="600"
        Width="1200"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <WrapPanel
            Name="WrapPanelForButtons"
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Button
                Name="ImportButton"
                Content="Add"
                Width="100"
                Height="50"
                Click="ImportButton_OnClick" />
            <Button
                Name="PlayButton"
                Content="Play"
                Width="100"
                Height="50"
                Click="PlayButton_OnClick" />
            <Button
                Name="PauseButton"
                Content="Pause"
                Width="100"
                Height="50"
                Click="PauseButton_OnClick" />
            <Button
                Name="SkipToNextButton"
                Content="SkipToNext"
                Width="100"
                Height="50"
                Click="SkipToNextButton_OnClick"
                />
        </WrapPanel>
        <TextBlock
            Name="StatusTextBlock"
            Grid.Row="0"
            Grid.Column="0"
            Text="{Binding SongStatus, StringFormat=Status: {0}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"/>
        <ListView
            Name="AudioTracksListView"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            SelectionChanged="AudioTracks_OnSelectionChanged" />
    </Grid>
</Window>